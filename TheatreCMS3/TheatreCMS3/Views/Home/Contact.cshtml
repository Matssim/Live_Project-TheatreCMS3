@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Styling for the black sections*/
    .black-section {
        background-color: var(--dark-color);
        color: var(--light-color);
        padding: 100px;
        border: 2px;
        border-bottom-left-radius: 50px;
        margin-left: -205px;
        margin-right: -205px;
    }
        
</style>

<div class="black-section">
    <h1 style="font-family: Broadway; text-align:center;">Contact Us</h1>
</div>
@* body section, changing background color to bg-main-light *@
<body class="cms-bg-main-light">  
    <h3 style="text-align:center; padding:5px;">GET IN TOUCH</h3>
    @* making form section *@
    <div class="row">

        <div class="col-md-8">

            <form>
                <div class="form-group">
                    <label for="firstName">First Name*</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Enter your first name" />
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name*</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Enter your last name" />
                </div>
                <div class="form-group">
                    <label for="email">Email*</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" />
                </div>
                <div class="form-group">
                    <label for="subject">Subject*</label>
                    <input type="text" class="form-control" id="subject" placeholder="Enter your subject" />
                </div>
                <div class="form-group">
                    <label for="message">Message*</label>
                    <textarea class="form-control" id="message" rows="3" placeholder="Enter your message"></textarea>
                </div>
                @* adding style to match color scheme *@
                <button type="submit" class="col-md-12" style="background-color: var(--main-color); border-color: var(--light-color); color: var(--light-color); ">Submit</button>
            </form>
        </div>
        <div class="col-md-4">
            <div>
                <h3>Donate</h3>
                <p>We've got a patreon account!'</p>
                <p>Help support live theatre in</p>
                <p>Portland, OR by becoming a</p>
                <p>Patron today!</p>
                @* adding style to match color scheme and matching width for right column *@
                <button class="btn btn-secondary" style="width: 100px; background-color: var(--main-color); border-color: var(--light-color);">Donate</button>
            </div>
            <div>
                <h3>Volunteer</h3>
                <p>Lorem ipsum dolor sit amet,</p>
                <p>consectetur adipiscing elit.</p>
                <p> Sed do eiusmod tempor incididunt</p>
                <p>ut labore et dolore magna aliqua.</p>
                @* adding style to match color scheme and matching width for right column *@
                <button class="btn btn-secondary" style="width: 100px; background-color: var(--main-color); border-color: var(--light-color);">Volunteer</button>
            </div>
        </div>
    </div>
</body>
